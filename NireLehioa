import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class NireLehioa extends JFrame  {
    String[] fitxategiak ={"python.txt", "c.txt", "java.txt"};
    JComboBox box = new JComboBox(fitxategiak);
    JTextArea jt1 = new JTextArea("", 20,35);
    void NireLehioa(){
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setPreferredSize(new Dimension(600,400));
        setLayout(new FlowLayout(FlowLayout.LEFT));
        box.setSelectedIndex(1);
        add(box);
        JButton clear = new JButton("Clear");
        clear.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                jt1.setText("");
            }
        });
        JFileChooser java = new JFileChooser(".\\java.txt");
        JFileChooser c = new JFileChooser(".\\c.txt");
        JFileChooser python = new JFileChooser(".\\python.txt");
        box.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                if (box.getSelectedItem().equals("python.txt")) {
                    jt1.setText(String.valueOf("aasdasasdasd"));
                } else if (box.getSelectedItem().equals("c.txt")) {
                    jt1.setText(String.valueOf(c));
                }
                else {
                    jt1.setText(String.valueOf(java));
                }

            }
        });
        add(clear);
        JScrollPane panel1 = new JScrollPane();

        setTitle("Nire aplikazioa");
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        panel1.setViewportView(jt1);
        panel1.setVerticalScrollBarPolicy(ScrollPaneConstants.VERTICAL_SCROLLBAR_ALWAYS);
        getContentPane().add(panel1);
        JButton close = new JButton("Close");
        add(close);
        pack();
        setVisible(true);
    }
}
